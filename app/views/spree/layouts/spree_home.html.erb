<!doctype html>
<html lang="<%= I18n.locale %>">
  <head data-hook="inside_head">

    <meta charset="utf-8">
    <title><%= content_for?(:title) ? yield(:title) : title %></title>
    <meta content="text/html; charset=UTF-8" http-equiv="Content-Type" />
    <meta content="width=device-width, initial-scale=1.0, maximum-scale=1" name="viewport">
    <%= render partial: 'layouts/partials/no_index' %>
    <%= render partial: 'layouts/partials/google_tag_head' %>
    <%= stylesheet_link_tag 'home_page_v2', media: 'all', 'data-turbolinks-track': 'reload' %>

    <% if controller_name == 'ffa_home' %>
      <%= stylesheet_link_tag 'ffa', media: 'all', 'data-turbolinks-track': 'reload' %>
    <% end %>
    <%= stylesheet_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <%== meta_data_tags %>
    <%= canonical_tag(current_store.url) %>
    <%= favicon_link_tag 'agazon_logo_mark_warm.svg' %>
    <%= csrf_meta_tags %>

    <%= yield :head %>

    <%= render partial: 'layouts/partials/facebook_meta_tag' %>
    <%= render partial: 'layouts/partials/hotjar' %>

    <meta property="og:title" content="Agzaga">
    <meta property="og:image" content="http://agazon-storage.nyc3.digitaloceanspaces.com/public_images/new_social_share_logo.png"/>
    <meta property="og:image:secure_url" content="https://agazon-storage.nyc3.digitaloceanspaces.com/public_images/new_social_share_logo.png"/>

    <%= render partial: 'layouts/partials/pinterest' %>
    <%= render partial: 'layouts/partials/microsoft_ads' %>
  </head>

  <body data-turbolinks="false" class="<%= "#{controller_name} #{action_name}" %> " id="<%= @body_id || 'default' %>" data-hook="body">
    <%= render partial: 'layouts/partials/google_tag_body' %>
    <%= render partial: 'spree/shared/flash' %>
    <%= render partial: 'spree/shared/header' %>

    <div id="fb-root"></div>
    <div id="fb-customer-chat" class="fb-customerchat"></div>

    <div class="<%= ['home', 'checkout', 'orders', 'users', 'user_sessions', 'user_passwords', 'products', 'favorites', 'taxons', 'contacts', 'custom_hose_generator', 'ffa_home'].include?(controller_name) ? 'container-fluid' : 'container' %>">

      <div id="content">
        <%= yield %>
      </div>

      <%= yield :templates %>
    </div>

    <%= render partial: 'spree/shared/footer_v2' %>
    <%= render partial: 'spree/shared/mobile_footer' %>
  </body>
</html>
