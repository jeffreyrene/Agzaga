<!doctype html>
<html lang="<%= I18n.locale %>">
  <head data-hook="inside_head">


    <meta charset="utf-8">
    <title><%= title %></title>
    <meta content="text/html; charset=UTF-8" http-equiv="Content-Type" />
    <meta content="width=device-width, initial-scale=1.0, maximum-scale=1" name="viewport">
    <%= render partial: 'layouts/partials/no_index' %>
    <%= render partial: 'layouts/partials/google_tag_head' %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>


    <%= render partial: 'spree/shared/head' %>
    <%= render partial: 'layouts/partials/facebook_meta_tag' %>
    <%= render partial: 'layouts/partials/hotjar' %>

    <%= render partial: 'spree/layouts/partials/facebook_meta_data' %>

    <%= render partial: 'layouts/partials/microsoft_ads' %>

  </head>

  <body class="<%= "#{controller_name} #{action_name}" %> " id="<%= @body_id || 'default' %>" data-hook="body">
    <%= render partial: 'layouts/partials/google_tag_body' %>
    <%= render partial: 'spree/shared/flash' %>
    <%= render partial: 'spree/shared/header_checkout' %>
    <%= render partial: 'solidus_affirm_v2/affirm_js' %>
    <%= javascript_include_tag "spree/frontend/affirm_v2_checkout" %>

    <div class="<%= ['checkout', 'orders'].include?(controller_name) ? 'container-fluid' : 'container' %>">

      <div id="content">
        <div class="loader">
          <%= image_tag 'loading-animation', class: "animation_gif" %>
        </div>

        <div class="checkout-loader">
          <div class="checkout-loading-indicator">
            <div class="loading-header">Placing your order</div>
            <div class="loading-text">This can take a minute...</div>
            <%= image_tag 'checkout-loading-gif-animation', class: "checkout_animation_gif" %>
          </div>
        </div>
        <%= yield %>
      </div>

      <%= yield :templates %>
    </div>

    <%= render partial: 'layouts/partials/help_scout'  unless controller_name == "checkout" %>
  </body>
</html>

