<% if @taxonomies.any? %>
  <div class="item <%= 'active_img' if params[:id] == nil %>">
    <div class="img-holder black-deals-holder">
      <a href="<%= spree::deals_products_url %>" class="clear-link">
        <%= image_tag "deals.png", alt: 'Image', class: "d-block d-md-none black-deals-card" %>
        <%= image_tag "deals_mob.svg", alt: 'Image', class: "d-none d-md-block black-deals-card" %>
      </a>
    </div>

    <p class="category-name">
      <%= link_to "All Deals", spree::deals_products_url, class: 'clear-link deals-text deals-bold-text' %>
    </p>
  </div>

  <div class="item">
    <div class="img-holder black-deals-holder">
      <a href="/products/gift_page" class="clear-link">
        <img src="<%= image_path('gift_bundle.png')%>" alt="image" class="d-none d-md-block black-deals-card" >
        <img src="<%= image_path('gift_mob.svg')%>" alt="image" class="d-block d-md-none black-deals-card" >
      </a>
    </div>

    <p class="category-name">
      <a href="/products/gift_page" class="clear-link deals-text deals-bold-text">Gift Bundles</a>
    </p>
  </div>

  <% @taxonomies.each do |taxonomy| %>
    <div class="item <%= 'active_img' if params[:id].to_i == taxonomy.id %>">
      <div class="img-holder black-deals-category">

        <% if taxonomy.root.icon.present? %>
          <% image_link = taxonomy.root.icon.url(:medium)%>
          <a href="<%= spree::deals_products_url(id: taxonomy.id) %>" class="clear-link  <%= 'active_img' if params[:id].to_i == taxonomy.id %>">
            <%= image_tag image_link, alt: taxonomy.name, class: "black-deals-category" %>
          </a>
        <% else %>
          <a href="<%= spree::deals_products_url(id: taxonomy.id) %>" class="clear-link">
            <%= image_tag "noimage.png", alt: 'Image', class: "black-deals-category" %>
          </a>
        <% end %>

      </div>
      <p class="category-name"><%= link_to (taxonomy.name), spree::deals_products_url(id: taxonomy.id), class: 'clear-link deals-text' %></p>
    </div>
  <% end %>
<% end %>

